<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- Calculators -->
        <service id="Setono\SyliusReviewPlugin\Calculator\AverageRatingCalculator"
                 decorates="sylius.calculator.average_rating" decoration-priority="64">
            <argument type="service" id="doctrine"/>
            <argument type="service" id="Setono\SyliusReviewPlugin\Calculator\AverageRatingCalculator.inner"/>
        </service>

        <service id="Setono\SyliusReviewPlugin\Calculator\CachedAverageRatingCalculator"
                 decorates="sylius.calculator.average_rating" decoration-priority="32">
            <argument type="service" id="Setono\SyliusReviewPlugin\Calculator\CachedAverageRatingCalculator.inner"/>
            <argument type="service" id="cache.app"/>
        </service>

        <!-- Commands -->
        <service id="setono_sylius_review.command.process"
                 class="Setono\SyliusReviewPlugin\Command\ProcessCommand">
            <argument type="service" id="setono_sylius_review.processor.review_request"/>

            <tag name="console.command"/>
        </service>

        <service id="setono_sylius_review.command.prune"
                 class="Setono\SyliusReviewPlugin\Command\PruneCommand">
            <argument type="service" id="setono_sylius_review.repository.review_request"/>
            <argument>%setono_sylius_review.pruning.threshold%</argument>

            <tag name="console.command"/>
        </service>

        <!-- Eligibility checkers -->
        <service id="setono_sylius_review.review_request_eligibility_checker.composite"
                 class="Setono\SyliusReviewPlugin\EligibilityChecker\CompositeReviewRequestEligibilityChecker">
        </service>

        <service id="setono_sylius_review.review_request_eligibility_checker.order_fulfilled"
                 class="Setono\SyliusReviewPlugin\EligibilityChecker\OrderFulfilledReviewRequestEligibilityChecker">
            <tag name="setono_sylius_review.review_request_eligibility_checker" priority="100"/>
        </service>

        <!-- Event subscribers -->
        <service id="setono_sylius_review.event_subscriber.create_review_request"
                 class="Setono\SyliusReviewPlugin\EventSubscriber\CreateReviewRequestSubscriber">
            <argument type="service" id="doctrine"/>
            <argument type="service" id="setono_sylius_review.factory.review_request"/>

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="setono_sylius_review.event_subscriber.review_request.check_eligibility_checks"
                 class="Setono\SyliusReviewPlugin\EventSubscriber\ReviewRequest\CheckEligibilityChecksSubscriber">
            <argument type="service" id="state_machine.setono_sylius_review__review_request"/>
            <argument>%setono_sylius_review.eligibility.maximum_checks%</argument>

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="setono_sylius_review.event_subscriber.review_request.increment_eligibility_checks"
                 class="Setono\SyliusReviewPlugin\EventSubscriber\ReviewRequest\IncrementEligibilityChecksSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="setono_sylius_review.event_subscriber.review_request.reset"
                 class="Setono\SyliusReviewPlugin\EventSubscriber\ReviewRequest\ResetSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="setono_sylius_review.event_subscriber.review_request.update_next_eligibility_check"
                 class="Setono\SyliusReviewPlugin\EventSubscriber\ReviewRequest\UpdateNextEligibilityCheckSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <!-- Factories -->
        <service id="Setono\SyliusReviewPlugin\Factory\ReviewRequestFactoryInterface"
                 alias="Setono\SyliusReviewPlugin\Factory\ReviewRequestFactory"/>

        <service id="Setono\SyliusReviewPlugin\Factory\ReviewRequestFactory" decoration-priority="64"
                 decorates="setono_sylius_review.factory.review_request">
            <argument type="service" id="Setono\SyliusReviewPlugin\Factory\ReviewRequestFactory.inner"/>
            <argument>%setono_sylius_review.eligibility.initial_delay%</argument>
        </service>

        <!-- Mailer -->
        <service id="setono_sylius_review.mailer.review_request_email_manager"
                 class="Setono\SyliusReviewPlugin\Mailer\ReviewRequestEmailManager">
            <argument type="service" id="sylius.email_sender"/>
        </service>

        <!-- Processors -->
        <service id="setono_sylius_review.processor.review_request"
                 class="Setono\SyliusReviewPlugin\Processor\ReviewRequestProcessor">
            <argument type="service" id="setono_sylius_review.repository.review_request"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="state_machine.setono_sylius_review__review_request"/>
            <argument type="service" id="setono_sylius_review.review_request_eligibility_checker.composite"/>
            <argument type="service" id="setono_sylius_review.mailer.review_request_email_manager"/>

            <call method="setLogger">
                <argument type="service" id="logger" on-invalid="ignore"/>
            </call>
        </service>

        <!-- Auto-approval Checkers -->
        <service id="setono_sylius_review.checker.auto_approval.store_review"
                 class="Setono\SyliusReviewPlugin\Checker\AutoApproval\CompositeAutoApprovalChecker"/>

        <service id="setono_sylius_review.checker.auto_approval.product_review"
                 class="Setono\SyliusReviewPlugin\Checker\AutoApproval\CompositeAutoApprovalChecker"/>

        <service id="Setono\SyliusReviewPlugin\Checker\AutoApproval\MinimumRatingAutoApprovalChecker"/>

        <!-- Reviewable Order Checkers -->
        <service id="Setono\SyliusReviewPlugin\Checker\ReviewableOrder\ReviewableOrderCheckerInterface"
                 alias="Setono\SyliusReviewPlugin\Checker\ReviewableOrder\CompositeReviewableOrderChecker"/>

        <service id="Setono\SyliusReviewPlugin\Checker\ReviewableOrder\CompositeReviewableOrderChecker"/>

        <service id="Setono\SyliusReviewPlugin\Checker\ReviewableOrder\OrderFulfilledReviewableOrderChecker">
            <argument>%setono_sylius_review.reviewable_order.reviewable_states%</argument>
            <tag name="setono_sylius_review.reviewable_order_checker" priority="100"/>
        </service>

        <service id="Setono\SyliusReviewPlugin\Checker\ReviewableOrder\StoreReviewEditableReviewableOrderChecker">
            <argument type="service" id="setono_sylius_review.repository.store_review"/>
            <argument>%setono_sylius_review.reviewable_order.editable_period%</argument>
            <tag name="setono_sylius_review.reviewable_order_checker" priority="50"/>
        </service>

        <!-- Controllers -->
        <service id="Setono\SyliusReviewPlugin\Controller\ReviewController" public="true">
            <argument type="service" id="sylius.repository.order"/>
            <argument type="service" id="doctrine"/>
            <argument type="service"
                      id="Setono\SyliusReviewPlugin\Checker\ReviewableOrder\ReviewableOrderCheckerInterface"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>

            <tag name="controller.service_arguments"/>
        </service>

        <!-- Form types -->
        <service id="Setono\SyliusReviewPlugin\Form\Type\StoreReviewType">
            <argument>%setono_sylius_review.model.store_review.class%</argument>
            <argument type="collection">
                <argument>setono_sylius_review</argument>
            </argument>
            <tag name="form.type"/>
        </service>

        <service id="Setono\SyliusReviewPlugin\Form\Type\ProductReviewType">
            <argument>%sylius.model.product_review.class%</argument>
            <argument type="collection">
                <argument>sylius</argument>
            </argument>
            <tag name="form.type"/>
        </service>

        <service id="Setono\SyliusReviewPlugin\Form\Type\ReviewType">
            <argument type="service" id="setono_sylius_review.repository.store_review"/>
            <argument type="service" id="sylius.factory.product_review"/>
            <argument type="service" id="sylius.repository.product_review"/>
            <tag name="form.type"/>
        </service>

        <!-- Doctrine Event Subscribers -->
        <service id="Setono\SyliusReviewPlugin\EventSubscriber\Doctrine\ReviewAutoApprovalSubscriber">
            <argument type="service" id="setono_sylius_review.checker.auto_approval.store_review"/>
            <argument type="service" id="setono_sylius_review.checker.auto_approval.product_review"/>
            <tag name="doctrine.event_listener" event="prePersist"/>
        </service>

    </services>
</container>
